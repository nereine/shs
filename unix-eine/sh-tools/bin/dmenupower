#!/bin/bash
case "$(printf "%s\n" "lock" "hybrid-sleep" "suspend" "hibernate" "restart" "shutdown" | dmenu -i)" in "shutdown") sudo systemctl poweroff ;; "hybrid-sleep") sudo systemctl hybrid-sleep ;; "restart") sudo systemctl reboot ;; "suspend") sudo systemctl suspend ;; "hibernate") sudo systemctl hibernate ;; "lock") slock ;; esac # for this to work you may need to edit sudoer file.
